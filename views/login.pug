extends layout

block content
  .container
    .text-center
      img.text-center(src='../images/logo-incident.png', alt='Smiley face', height='160', width='160')
    //h1.MC-paddingT-5.MC-paddingB-5(style='text-align:center') #{buttonText} Form
    .card.border-primary.mb-3.MC-login
      h3.text-center.card-header #{buttonText} Form
      .card-body
        form(method="POST")
          .form-group
            label Username
            input.form-control(name="username" type="text")
          .form-group
            label Password
            input.form-control(name="password" type="password")
          button.btn.btn-primary(type="submit")= buttonText