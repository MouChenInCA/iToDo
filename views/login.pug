extends layout

block content
  .container
    h1.MC-paddingT-5.MC-paddingB-5(style='text-align:center') #{buttonText} Form
    .card.border-primary.mb-3.MC-login
      .card-header #{buttonText} Form
      .card-body
        form(method="POST")
          .form-group
            label Username
            input.form-control(name="username" type="text")
          .form-group
            label Password
            input.form-control(name="password" type="password")
          button.btn.btn-primary(type="submit")= buttonText